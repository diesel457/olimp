@keyframes mymove {
	0% {top: 2px;}
	25% {top: 3px}
	50% {top: 2px}
	75% {top: 3px}
	100% {top: 5px;}
}

.root
	position relative
	height 65%
	overflow hidden

	img
		width 100%
		height auto
		display block

	&-carousel
		height 100%!important
		div
			max-height 100%!important

.active
	text-indent -9999px
	position relative
	&:before
		content: ''
		position absolute
		width 16px
		height 16px
		border: 2px solid $colors.white
		border-radius 100%
		top 50%
		left 50%
		margin -6px 0 0 -8px


.animation
	font-size 12px
	font-weight bold
	text-transform uppercase
	position absolute
	left 50%
	bottom 2%
	color: $colors.white
	display flex
	align-items center
	&-circle
		width 20px
		height 24px
		display flex
		justify-content center
		border: 2px solid $colors.white
		margin-right 26px
		margin-left -50%
		border-radius 10px
	&-arrow
		position relative
		top 2
		animation-name mymove
		animation-duration 1s
		animation-iteration-count infinite
