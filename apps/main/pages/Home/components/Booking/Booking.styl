_black = #000

.content
	width 100%
	max-width 720px
	display flex
	flex-direction column

.form

	label
		color: $colors.white
		font-size 20px
		width 40%
		font-family: $Oranienbaum
		letter-spacing 1px

	input
		appearance none
		border none
		background-color transparent
		outline none
		font-size 16px
		font-family: $AvenirMedium
		color: $colors.white
		width 60%
		height 100%
		letter-spacing 1px
		&::-webkit-input-placeholder
			color: $colors.white
		&::-moz-placeholder
			color: $colors.white
		&:-ms-input-placeholder
			color: $colors.white
		&:-moz-placeholder
			color: $colors.white

	&-row
		background-color _black
		padding-left 72px
		height 68px
		display flex
		align-items center
		margin-top 18px
		&.-clear
			background-color transparent
			padding-left 0

	&-submit
		background-color: $colors.brown
		color: $colors.white
		font-family: $AvenirMedium
		text-transform uppercase
		letter-spacing 1px
		cursor pointer
		width 100%
		height 100%
		border none
		outline none
		font-size 13px

.Dropdown
	width 100%
	color: $colors.brown
	font-family: $Oranienbaum
	font-size 20px

	&-selected
		display flex
		align-items center
		color: $colors.white
		cursor pointer
		justify-content space-between
		background-color _black
		height 68px
		padding-left 72px
		padding-right 28px
		svg
			transform rotate(180deg)
			transition .5s ease

		.-open & svg
			transform rotate(0)

	&-content
		max-height 0
		overflow hidden

		.-open &
			max-height 100%
			transition 1s ease

	&-option
		background-color _black
		height 68px
		display flex
		align-items center
		padding-left 72px
		padding-right 28px
		margin-top 2px
		cursor pointer

	&-input
		display none
