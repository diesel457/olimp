.root
	display flex
	justify-content space-between
	padding 72px

.item
	width 22%
	color: $colors.black
	min-width 270px
	box-shadow: 0 4px 8px 0 rgba(0,0,0,0.1)
	font-family: $AvenirMedium

	&-img
		width 100%
		height auto
		display block

	&-bottom
		padding 30px 22px

	&-name
		font-size 20px
		margin-bottom 22px
		font-family: $Oranienbaum

	&-description
		font-size 12px
		line-height 20px
		margin-bottom 22px

	&-price
		color: $colors.brown
		font-size 12px
		font-weight bold
		text-transform uppercase
