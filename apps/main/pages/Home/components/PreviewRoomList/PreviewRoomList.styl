.root
  display flex
  padding 72px 72px 0
  @media (max-width: $tablet)
    padding 10px
    flex-direction column

.hide
  display none

.item
  width 22%
  min-height 426px
  color: $colors.black
  min-width 270px
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.1)
  font-family: $AvenirMedium
  position relative

  display flex
  flex-direction column

  & + &
    margin-left 4%

  @media (max-width: $tablet)
    min-width 100%
    & + &
      margin-left 0
      margin-top 10px

  &-img
    width 100%
    height 200px
    overflow hidden

  &-bottom
    padding 30px 22px
    display flex
    flex-direction column
    flex 1

  &-name
    font-size 20px
    margin-bottom 16px
    font-family: $Oranienbaum
    flex-shrink 0

  &-description
    font-size 12px
    line-height 20px
    margin-bottom 16px
    flex 1

  &-price
    color: $colors.brown
    font-size 12px
    font-weight bold
    text-transform uppercase

  &-goToRooms
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    display block
