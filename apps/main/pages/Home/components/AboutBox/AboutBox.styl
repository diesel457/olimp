.root
  display flex
  justify-content flex-end
  align-items center
  min-height 200px
  position relative
  flex-shrink 0
  height 35%
  @media (max-width: $tablet)
    padding 0 10px

.spinner
  display flex
  flex-direction column
  color: $colors.black
  width 36%
  max-width 672px
  min-width 380px
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.1)
  padding 36px
  background-color: $colors.white
  position absolute
  left 26px
  z-index 1
  @media (max-width: $tablet)
    display none

  h2
    font-family: $Oranienbaum
    font-size 36px

.description
  &-first
    margin-top 32px
    font-size 16px

  &-second
    font-size 12px
    color: $colors.grey
    p
      margin-top 26px

.inner
  display flex
  flex-direction column
  width 55%
  @media (max-width: $tablet)
    width 100%
  h2
    font-family: $AvenirMedium
    font-size 12px
    font-weight bold
    text-transform uppercase

.items
  display flex
  justify-content space-between
  padding 52px 72px 0 32px
  @media (max-width: $tablet)
    padding 52px 10px 0
    text-indent -9999px

.item
  display flex
  flex-direction column
  height 82px
  align-items center
  justify-content space-between
  & > span
    color: $colors.grey

.save
  background-color: $colors.brown
  border none
  color: $colors.white
  width 100px
  border-radius 3px
  padding 5px 0
  margin-top 16px
  cursor pointer
  align-self flex-end
