.Room
  display flex
  position relative
  min-height 500px
  max-height 500px
  transition 1s ease
  &.-showMore
    max-height 100%
  &:nth-child(2n)
    .right
      order 1
      padding-left 0
      padding-right 56px
    .left
      order 2
    .Admin-edit
      right auto
      left 0
    .imagesList
      left auto
      right 24px
      transform scale(-1)
      img
        transform rotate(-180deg)

  @media (max-width: $tablet)
    flex-direction column
    & + &
      margin-top 16px
    &:nth-child(2n)
      .left
        order 1
      .right
        padding-right 0
        order 2

.left
  width 50%
  max-height 500px
  position relative

  @media (max-width: $tablet)
    width 100%
    max-height 100%

.imagesList
  position absolute
  left 24px
  bottom 16px
  display flex
  @media (max-width: $tablet)
    display none

  img
    display block
    width 86px
    height @width
    cursor pointer
    margin-left 24px
    &:first-child
      margin-left 0
    &.-active
      border: 2px solid $colors.brown

.right
  width 50%
  padding 72px 0 72px 56px
  display flex
  flex-direction column
  @media (max-width: $tablet)
    width 100%
    padding-top 16px
    padding-left 0

.title
  font-size 40px
  font-family: $Oranienbaum

.description
  font-size 16px
  font-family: $AvenirMedium
  margin-top 26px
  flex 1

.price
  font-family: $Oranienbaum
  font-size 20px
  margin-top 26px

.btn
	border: 2px solid $colors.brown
	display flex
	align-items center
	justify-content center
	width 100%
	max-width 272px
	height 68px
	background-color transparent
	color: $colors.brown
	text-transform uppercase
	cursor pointer
	outline none
	margin-top 26px

.showMore
  color: $colors.brown
  font-size 10px
  margin-left 6px
  cursor pointer
  text-transform uppercase

.swiper
  display flex
  align-items center

.swiper-images
  img
    width 100%
    height 100%
    display none
    &.-active
      display block

.swiper-arrows
  display flex
  justify-content space-between
  position absolute
  width 100%
  height 62px
  overflow hidden

.swiper-arrow
  background-color rgba(#000, .5)
  width 62px
  height 100%
  margin-left -26px
  border-radius 100%
  display flex
  align-items center
  justify-content flex-end
  padding-right 8px
  cursor pointer
  &.-right
    margin 0 -26px 0 0
    padding 0 0 0 8px
    justify-content flex-start