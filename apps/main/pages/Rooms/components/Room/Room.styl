.root
	display flex
	padding 0 0 72px
	&:nth-child(2n)
		.right
			order 1
			padding-left 0
			padding-right 56px
		.left
			order 2

.left
	width 50%
	height 600px
	overflow hidden
	position relative
	display flex
	align-items center
	justify-content center
	img
		width 100%
		height auto

.imagesList
	position absolute
	left 24px
	bottom 16px
	display flex

	img
		display block
		width 86px
		height @width
		cursor pointer
		margin-left 24px
		&:first-child
			margin-left 0
		&.-active
			border: 2px solid $colors.brown

.right
	width 50%
	padding-top 72px
	padding-left 56px

.title
	font-size 40px
	font-family: $Oranienbaum

.description
	font-size 16px
	font-family: $AvenirMedium
	margin-top 36px

.price
	font-family: $Oranienbaum
	font-size 20px
	margin-top 36px

.btn
	border: 2px solid $colors.brown
	display flex
	align-items center
	justify-content center
	width 100%
	max-width 272px
	height 68px
	background-color transparent
	color: $colors.brown
	text-transform uppercase
	cursor pointer
	outline none
	margin-top 36px
