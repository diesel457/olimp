_black = #000

.AddRoom
	display flex
	justify-content center
	width 100%

.content
	width 100%
	max-width 720px
	display flex
	flex-direction column

.imagePreviewList
	display flex

.imagePreview
	width 20%
	height 70%
	max-height 68px
	display flex
	overflow hidden
	align-items flex-start
	position relative
	& + &
		margin-left 10px
	img
		width 100%
		height auto
		display block

.delete
	width 100%
	height 100%
	display flex
	align-items center
	justify-content center
	opacity 0
	position absolute
	left 0
	top 0
	background-color rgba(_black, 0.7)
	color: $colors.white
	transition opacity .2s linear
	font-size 20px
	cursor pointer
	&:hover
		opacity 1

.form

	label
		color: $colors.white
		font-size 20px
		width 40%
		font-family: $Oranienbaum
		letter-spacing 1px
		padding-right 1%

	input[type=text]
	input[type=file]
	input[type=number]
		appearance none
		border none
		background-color transparent
		outline none
		font-size 16px
		font-family: $AvenirMedium
		color: $colors.white
		width 60%
		height 100%
		&::-webkit-input-placeholder
			color: $colors.white
		&::-moz-placeholder
			color: $colors.white
		&:-ms-input-placeholder
			color: $colors.white
		&:-moz-placeholder
			color: $colors.white

	input[type=file]
		max-height 30%

	input[type=checkbox]
		width 12px
		height @width

	textarea
		background-color transparent
		resize none
		outline none
		min-height 200px
		width 100%
		color: $colors.white
		font-size 16px
		font-family: $AvenirMedium
		border none
		padding 5px 0

	&-row
		background-color _black
		padding-left 72px
		height 68px
		display flex
		align-items center
		margin-top 18px
		color: $colors.white
		&.-clear
			background-color transparent
			padding-left 0
		&.-textarea
			height auto
			align-items flex-start
			padding-top 10px
		&.-imagesList
			flex-direction column
			padding 16px
			height auto

	&-submit
		background-color: $colors.brown
		color: $colors.white
		font-family: $AvenirMedium
		text-transform uppercase
		letter-spacing 1px
		cursor pointer
		width 100%
		height 100%
		border none
		outline none
		font-size 13px

.Dropdown
	width 100%
	color: $colors.brown
	font-family: $Oranienbaum
	font-size 20px

	&-selected
		display flex
		align-items center
		color: $colors.white
		cursor pointer
		justify-content space-between
		background-color _black
		height 68px
		padding-left 72px
		padding-right 28px
		svg
			transform rotate(180deg)
			transition .5s ease

		.-open & svg
			transform rotate(0)
		@media (max-width: $tablet)
			padding-left 16px

	&-content
		max-height 0
		overflow hidden

		.-open &
			max-height 100%
			transition 1s ease

	&-option
		background-color _black
		height 68px
		display flex
		align-items center
		padding-left 72px
		padding-right 28px
		margin-top 2px
		cursor pointer

	&-input
		display none
