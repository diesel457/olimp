.Footer
	background-color: $colors.black
	display flex
	padding 76px 0 82px

	h2
		font-size 20px

.col
	width 25%
	display flex
	flex-direction column
	padding-left 7%
	color: $colors.mainBackground

.description
	margin-top 26px
	text-transform uppercase
	font-size 10px

.widget
	margin-top 32px
	a
		margin-left 20px
		&:first-child
			margin-left 0

.nav
	display flex
	flex-direction column
	margin-top 38px
	a
		color: $colors.mainBackground
		text-transform uppercase
		display flex
		position relative
		padding-left 20px
		margin-top 12px
		&:first-child
			margin-top 0
		&:before
			content: ''
			width 4px
			height 0
			position absolute
			left 0
			top 0
			background-color: $colors.mainBackground
			transition .2s linear
		&:hover
			&:before
				height 100%
