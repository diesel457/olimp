.TopAdmin
  width 100%
  height 25px
  position fixed
  background-color: $colors.grey
  top 0
  left 0
  display flex
  align-items center
  justify-content flex-end
  z-index 9999
  padding 0 36px
  &.-hide
    display none
  & + .Header
    top 25px
  & ~ .Content
    padding-top 97px
  a
    color: $colors.black

.separator
  margin 0 16px
