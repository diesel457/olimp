.Header
	display flex
	align-items center
	background-color: $colors.mainBackground
	height 72px
	text-transform uppercase
	font-family: 'AvenirHeavy'

	&-logo
		background-color: $colors.black
		display flex
		justify-content center
		align-items center
		width 72px
		height @width

	&-nav
		padding 0 72px
		display flex
		flex 1
		justify-content space-between
		align-items center
		nav
			color: $colors.black
			display flex
			a
				display flex
				align-items center
				height 100%
				margin-left 32px
				position relative
				&:first-child
					margin-left 0
				&:before
					content: ''
					background-color: $colors.black
					height 4px
					width 0
					position absolute
					left 0
					bottom 0
					transition .2s linear
				&:hover
					&:before
						width 100%

	&-info > span
		margin-left 32px
		&:first-child
			margin-left 0
