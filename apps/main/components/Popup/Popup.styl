.root
	background-color: $colors.black
	position fixed
	width 100%
	height @width
	z-index 9999

	display flex
	flex-direction column

	opacity 0
	transition opacity .6s ease
	&.-active
		opacity 1

.top
	display flex
	align-items flex-start
	padding 16px
	color: $colors.white

.logo
	flex-shrink 0

.title
	flex 1
	color: $colors.white
	text-transform uppercase
	font-family: $AvenirMedium
	display flex
	justify-content center
	font-size 12px
	& > span
		position relative
		padding-bottom 32px
		display flex
		justify-content center
		&:before
			content ''
			width 50%
			height 2px
			background-color: $colors.white
			position absolute
			bottom 0

.xMark
	font-size 32px
	color: $colors.white
	cursor pointer
	flex-shrink 0

.inner
	width 100%
	display flex
	justify-content center
	margin-top 36px
