_black = #000

.root
	background-color: $colors.black
	position fixed
	width 100%
	height @width
	z-index 9999

	display flex
	flex-direction column

	opacity 0
	transition opacity .6s ease
	&.-active
		opacity 1

.top
	display flex
	align-items flex-start
	padding 16px
	color: $colors.white

.logo
	flex-shrink 0

.title
	flex 1
	color: $colors.white
	text-transform uppercase
	font-family: $AvenirMedium
	display flex
	justify-content center
	font-size 12px
	& > span
		position relative
		padding-bottom 32px
		display flex
		justify-content center
		&:before
			content ''
			width 50%
			height 2px
			background-color: $colors.white
			position absolute
			bottom 0

.xMark
	font-size 32px
	color: $colors.white
	cursor pointer
	flex-shrink 0

.inner
	width 100%
	display flex
	justify-content center
	margin-top 36px

.content
	width 100%
	max-width 720px
	display flex
	flex-direction column

.form

	label
		color: $colors.white
		font-size 20px
		width 40%
		font-family: $Oranienbaum
		letter-spacing 1px

	input
		appearance none
		border none
		background-color transparent
		outline none
		font-size 16px
		font-family: $AvenirMedium
		color: $colors.white
		width 60%
		height 100%
		letter-spacing 1px
		&::-webkit-input-placeholder
			color: $colors.white
		&::-moz-placeholder
			color: $colors.white
		&:-ms-input-placeholder
			color: $colors.white
		&:-moz-placeholder
			color: $colors.white

	&-row
		background-color _black
		padding-left 72px
		height 68px
		display flex
		align-items center
		& + &
			margin-top 18px
		&.-clear
			background-color transparent
			padding-left 0

	&-submit
		background-color: $colors.brown
		color: $colors.white
		font-family: $AvenirMedium
		text-transform uppercase
		letter-spacing 1px
		cursor pointer
		width 100%
		height 100%
		border none
